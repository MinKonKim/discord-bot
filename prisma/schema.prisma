generator client {
  provider = "prisma-client-js"
 // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Tier {
  BRONZE
  SILVER
  GOLD
  PLATINUM
  DIAMOND
  MASTER
  GRANDMASTER
  CHAMPION
}

model OverWatchPlayer {
  id          String   @id @default(uuid())
  nickname    String   @unique
  tankTier    Tier?
  dpsTier     Tier?
  healTier    Tier?
  createdAt   DateTime @default(now())
}